# Using for-if-else

x = int(input('Enter any natural number= '))  # enter the number; Here int type is used as the natural number is expected here

for i in range(2, x):
    if x % i == 0:
        print('The given number ({0}) is not a prime number'.format(x))
        break
else:
    print('The given number ({0}) is a prime number'.format(x))

# Using a flag variable

x = int(input(
    'Enter any natural number= '))  # enter the number; Here int type is used as the natural number is expected here

# define a flag variable
flag = False

for i in range(2, x):
    if x % i == 0:
        flag = True
        break
if flag:
    print(x, ' is not a prime number')
else:
    print(x, ' is a prime number')
